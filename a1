local TweenService = game:GetService("TweenService")
local RunService = game:GetService("RunService")

-- Exploit-safe GUI creation
local function CreateLoader()
    local ScreenGui = Instance.new("ScreenGui")
    ScreenGui.ZIndexBehavior = Enum.ZIndexBehavior.Sibling
    ScreenGui.ResetOnSpawn = false
    
    local Main = Instance.new("Frame")
    Main.Size = UDim2.new(1, 0, 1, 0)
    Main.BackgroundColor3 = Color3.fromRGB(25, 25, 25)
    Main.BorderSizePixel = 0
    
    -- Gradient text implementation
    local TextLabel = Instance.new("TextLabel")
    TextLabel.Text = "VelvetHub Scripts [BGSI]"
    TextLabel.Size = UDim2.new(1, 0, 0.2, 0)
    TextLabel.Position = UDim2.new(0, 0, 0.35, 0)
    TextLabel.BackgroundTransparency = 1
    TextLabel.Font = Enum.Font.GothamBlack
    TextLabel.TextSize = 28
    
    local Gradient = Instance.new("UIGradient")
    Gradient.Color = ColorSequence.new({
        ColorSequenceKeypoint.new(0, Color3.fromRGB(170, 170, 170)),
        ColorSequenceKeypoint.new(1, Color3.fromRGB(100, 100, 100))
    })
    Gradient.Rotation = 45
    Gradient.Parent = TextLabel
    
    -- Progress bar construction
    local BarContainer = Instance.new("Frame")
    BarContainer.Size = UDim2.new(0.8, 0, 0.04, 0)
    BarContainer.Position = UDim2.new(0.1, 0, 0.55, 0)
    BarContainer.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
    BarContainer.BorderSizePixel = 0
    
    local Progress = Instance.new("Frame")
    Progress.Size = UDim2.new(0, 0, 1, 0)
    Progress.BackgroundColor3 = Color3.fromRGB(85, 85, 85)
    Progress.BorderSizePixel = 0
    Progress.Parent = BarContainer
    
    -- Assembly hierarchy
    TextLabel.Parent = Main
    BarContainer.Parent = Main
    Main.Parent = ScreenGui
    
    return ScreenGui, Progress
end

-- Execution flow
local LoaderUI, ProgressBar = CreateLoader()
LoaderUI.Parent = game:GetService("CoreGui") or game.Players.LocalPlayer:WaitForChild("PlayerGui")

-- Non-blocking animation routine
task.spawn(function()
    local StartTime = tick()
    local Tween = TweenService:Create(
        ProgressBar,
        TweenInfo.new(9, Enum.EasingStyle.Quad),
        {Size = UDim2.new(0.99, 0, 1, 0)}
    )
    
    Tween:Play()
    
    while tick() - StartTime < 9 do
        RunService.Heartbeat:Wait()
    end
end)

-- Background script execution
task.spawn(function()
    loadstring(game:HttpGet("https://raw.githubusercontent.com/IdiotHub/Scripts/refs/heads/main/BGSI/main.lua"))()
end)
